{
  "name": "@jellos/api",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "worktrees": "./dist/cli/worktrees.cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:secure": "NODE_PERMISSIONS=true tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "start:secure": "NODE_ENV=production node dist/index.js",
    "start:permissions": "node --permission --allow-child-process --allow-fs-read=$(pwd)/dist --allow-fs-read=/usr/bin --allow-fs-read=/usr/local/bin --allow-fs-write=$(pwd)/dist dist/index.js",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:permissions": "NODE_PERMISSIONS=true vitest run",
    "validate:permissions": "tsx src/scripts/validate-permissions.ts",
    "validate:permissions:prod": "NODE_ENV=production tsx src/scripts/validate-permissions.ts",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/sse": "^0.4.0",
    "@fastify/swagger": "^9.4.2",
    "@fastify/under-pressure": "^9.0.3",
    "@linear/sdk": "^63.4.0",
    "@octokit/rest": "^21.0.2",
    "@prisma/client": "5",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "fastify": "^5.2.2",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.2",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jellos/eslint-config": "workspace:*",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.5",
    "@types/pino": "^7.0.5",
    "eslint": "^9.22.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "prisma": "5",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^4.0.8"
  }
}
