// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Core Domain Models
// ============================================================================

/// Project represents a local development project directory
model Project {
  id            String   @id @default(cuid())
  name          String
  localPath     String   @unique
  defaultBranch String   @default("main")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  issues    Issue[]
  worktrees Worktree[]
  agents    CodeAgentRuntime[]

  @@map("projects")
}

/// Issue represents a task or feature to be worked on
model Issue {
  id          String   @id @default(cuid())
  projectId   String
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, IN_REVIEW, MERGED, DEPLOYED, REJECTED, CANCELED
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project       Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  worktrees     Worktree[]
  externalLinks ExternalIssueLink[]
  comments      IssueComment[]
  stateHistory  IssueStateHistory[]

  @@index([projectId])
  @@index([status])
  @@map("issues")
}

/// Worktree represents a git worktree for isolated development
model Worktree {
  id           String    @id @default(cuid())
  projectId    String
  issueId      String?
  path         String
  branch       String    @unique
  status       String    @default("ACTIVE") // ACTIVE, STALE, DIRTY, REMOVED
  lastActivity DateTime? // Last time worktree was accessed or modified
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issue   Issue?  @relation(fields: [issueId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([issueId])
  @@index([status])
  @@map("worktrees")
}

/// WorktreeLock for distributed locking mechanism
model WorktreeLock {
  resourceId String   @id // Unique identifier for the locked resource (e.g., worktree ID or branch name)
  lockId     String   // Unique lock identifier
  processId  Int      // Process ID that holds the lock
  expiresAt  DateTime // Lock expiration timestamp

  @@map("worktree_locks")
}

/// CodeAgentRuntime represents a discovered or configured code agent
model CodeAgentRuntime {
  id           String    @id @default(cuid())
  projectId    String?
  externalId   String // Unique identifier from agent itself
  label        String
  cmd          String
  args         String // JSON array of arguments
  envMask      String // JSON array of environment variable names
  version      String?
  path         String?
  healthStatus String    @default("unknown")
  lastChecked  DateTime?
  enabled      Boolean   @default(true)
  discoveredAt DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  project    Project?          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  executions AgentExecution[]

  @@unique([projectId, externalId])
  @@index([projectId])
  @@map("code_agent_runtimes")
}

/// AgentExecution represents a single agent execution session
model AgentExecution {
  id             String    @id @default(cuid())
  agentId        String
  projectId      String?
  issueId        String?
  worktreePath   String?
  status         String    @default("PENDING") // PENDING, RUNNING, COMPLETED, FAILED, TIMEOUT, CANCELLED
  processId      Int?      // OS process ID
  exitCode       Int?      // Process exit code
  startedAt      DateTime?
  completedAt    DateTime?
  lastHeartbeat  DateTime?
  context        String?   // JSON context data (prompt, options, etc.)
  errorMessage   String?
  // Git metadata
  gitDiff        String?   // Git diff output (may be compressed)
  gitCommitHash  String?   // Commit SHA if committed
  gitCommitMsg   String?   // Commit message
  gitBranch      String?   // Branch name
  filesChanged   Int?      // Number of files changed
  linesAdded     Int?      // Lines added
  linesDeleted   Int?      // Lines deleted
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  agent        CodeAgentRuntime        @relation(fields: [agentId], references: [id], onDelete: Cascade)
  stateHistory ExecutionStateHistory[]

  @@index([agentId])
  @@index([status])
  @@index([projectId])
  @@index([gitCommitHash])
  @@map("agent_executions")
}

/// ExternalIssueLink connects internal issues to external issue trackers
model ExternalIssueLink {
  id          String   @id @default(cuid())
  issueId     String
  provider    String // "linear", "github", etc.
  externalId  String
  externalUrl String
  syncEnabled Boolean  @default(false)
  createdAt   DateTime @default(now())

  // Relations
  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@unique([issueId, provider])
  @@index([externalId])
  @@map("external_issue_links")
}

/// IssueComment represents a comment on an issue
model IssueComment {
  id        String   @id @default(cuid())
  issueId   String
  content   String
  author    String
  createdAt DateTime @default(now())

  // Relations
  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@index([issueId])
  @@map("issue_comments")
}

/// IssuePRMapping tracks the relationship between issues and pull requests
model IssuePRMapping {
  id         String   @id @default(cuid())
  issueId    String
  projectId  String
  prNumber   Int      // GitHub PR number
  prUrl      String   // Full URL to the PR
  branchName String   // Branch associated with the PR
  state      String   @default("open") // open, closed, merged
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  closedAt   DateTime? // When the PR was closed/merged

  @@unique([issueId, prNumber]) // Prevent duplicate mappings for same issue-PR pair
  @@unique([projectId, branchName, state]) // Prevent multiple open PRs from same branch
  @@index([issueId])
  @@index([projectId])
  @@index([branchName])
  @@index([state])
  @@map("issue_pr_mappings")
}

// ============================================================================
// State History Models (Task 12.2 - FSM State Tracking)
// ============================================================================

/// IssueStateHistory tracks state transitions for issues in the FSM
/// Extended with event sourcing capabilities (Task 12.5)
model IssueStateHistory {
  id             String   @id @default(cuid())
  issueId        String
  fromState      String? // null for initial state creation
  toState        String
  event          String // The event that triggered this transition (e.g., "start_work", "submit_for_review")
  context        String? // JSON serialized context data at time of transition
  triggeredBy    String? // User ID or system identifier that triggered the transition
  reason         String? // Optional reason for transition (e.g., blocking reason, rejection reason)
  metadata       String? // JSON metadata for additional context
  timestamp      DateTime @default(now())

  // Event Sourcing fields (Task 12.5)
  eventId        String?  @unique // Unique event ID for idempotency
  version        String   @default("1.0.0") // Event schema version
  correlationId  String? // Correlation ID for tracing
  causationId    String? // Causation ID for event chains
  sequenceNumber Int? // Sequence number for ordering guarantees
  persistedAt    DateTime @default(now()) // When event was persisted

  // Relations
  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@index([issueId])
  @@index([timestamp])
  @@index([toState])
  @@index([issueId, timestamp])
  @@index([eventId])
  @@index([correlationId])
  @@index([issueId, sequenceNumber])
  @@map("issue_state_history")
}

/// ExecutionStateHistory tracks state transitions for agent executions
/// Extended with event sourcing capabilities (Task 12.5)
model ExecutionStateHistory {
  id             String   @id @default(cuid())
  executionId    String
  fromState      String? // null for initial state
  toState        String
  event          String // The event that triggered this transition (e.g., "execute", "complete", "fail")
  context        String? // JSON serialized context data
  reason         String? // Optional reason (e.g., error message, timeout reason)
  metadata       String? // JSON metadata for additional context
  timestamp      DateTime @default(now())

  // Event Sourcing fields (Task 12.5)
  eventId        String?  @unique // Unique event ID for idempotency
  version        String   @default("1.0.0") // Event schema version
  correlationId  String? // Correlation ID for tracing
  causationId    String? // Causation ID for event chains
  sequenceNumber Int? // Sequence number for ordering guarantees
  persistedAt    DateTime @default(now()) // When event was persisted

  // Relations
  execution AgentExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)

  @@index([executionId])
  @@index([timestamp])
  @@index([toState])
  @@index([executionId, timestamp])
  @@index([eventId])
  @@index([correlationId])
  @@index([executionId, sequenceNumber])
  @@map("execution_state_history")
}

// ============================================================================
// Event Sourcing Snapshots (Task 12.5)
// ============================================================================

/// IssueStateSnapshot for performance optimization in event replay
model IssueStateSnapshot {
  id                 String   @id @default(cuid())
  issueId            String
  state              String // JSON serialized current state
  lastSequenceNumber Int // Last event sequence included in snapshot
  version            String   @default("1.0.0") // Event schema version
  metadata           String? // JSON metadata
  createdAt          DateTime @default(now())

  @@index([issueId])
  @@index([issueId, lastSequenceNumber])
  @@map("issue_state_snapshots")
}

/// ExecutionStateSnapshot for performance optimization in event replay
model ExecutionStateSnapshot {
  id                 String   @id @default(cuid())
  executionId        String
  state              String // JSON serialized current state
  lastSequenceNumber Int // Last event sequence included in snapshot
  version            String   @default("1.0.0") // Event schema version
  metadata           String? // JSON metadata
  createdAt          DateTime @default(now())

  @@index([executionId])
  @@index([executionId, lastSequenceNumber])
  @@map("execution_state_snapshots")
}

// ============================================================================
// Saga Pattern Tables (Task 12.6 - Compensating Transactions)
// ============================================================================

/// SagaInstance tracks saga execution with compensating transactions
model SagaInstance {
  id                String    @id @default(cuid())
  type              String // SagaWorkflowType: ISSUE_TO_EXECUTION, EXECUTION_TO_PR, etc.
  status            String // SagaStatus: PENDING, RUNNING, COMPLETED, COMPENSATING, COMPENSATED, FAILED
  patternType       String // SagaPatternType: ORCHESTRATION, CHOREOGRAPHY
  context           String // JSON serialized SagaContext
  stepStates        String // JSON serialized Map<string, SagaStepState>
  completedSteps    String // JSON array of completed step IDs
  failedSteps       String // JSON array of failed step IDs
  compensatedSteps  String // JSON array of compensated step IDs
  error             String? // JSON serialized error information
  metadata          String? // JSON metadata
  startedAt         DateTime  @default(now())
  completedAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([type])
  @@index([status])
  @@index([startedAt])
  @@index([type, status])
  @@map("saga_instances")
}

